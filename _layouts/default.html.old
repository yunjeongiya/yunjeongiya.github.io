<!DOCTYPE html>
<html lang="{{ page.lang | default: site.lang | default: "ko" }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% if page.title %}{{ page.title | escape }} - {% endif %}{{ site.title | escape }}</title>
  <meta name="description" content="{{ page.excerpt | default: site.description | strip_html | normalize_whitespace | truncate: 160 | escape }}">
  <link rel="stylesheet" href="{{ "/assets/css/vscode-exact.css" | relative_url }}">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@vscode/codicons@0.0.35/dist/codicon.css">
  {% feed_meta %}
  {% seo %}
</head>
<body>
  <div class="vscode-container">
    <!-- Title Bar -->
    <div class="vscode-titlebar">
      <div class="title">{{ site.title }} - {% if page.title %}{{ page.title }}{% else %}Welcome{% endif %}</div>
    </div>

    <!-- Main Layout -->
    <div class="vscode-main {% if page.layout == 'post' %}with-terminal{% endif %}">
      <!-- Activity Bar -->
      <div class="vscode-activitybar">
        <div class="activity-icon active" title="Explorer">
          <i class="codicon codicon-files"></i>
        </div>
        <div class="activity-icon" title="Search">
          <i class="codicon codicon-search"></i>
        </div>
        <div class="activity-icon" title="Source Control">
          <i class="codicon codicon-source-control"></i>
        </div>
        <div class="activity-icon" title="Settings">
          <i class="codicon codicon-gear"></i>
        </div>
      </div>

      <!-- Side Bar -->
      <div class="vscode-sidebar">
        <div class="sidebar-header">EXPLORER</div>
        <div class="sidebar-content">
          <div class="sidebar-section">
            <div class="sidebar-section-title">NAVIGATION</div>
            <a href="{{ "/" | relative_url }}" style="text-decoration: none; color: inherit;">
              <div class="sidebar-item">
                <i class="codicon codicon-home icon"></i>
                <span>Home</span>
              </div>
            </a>
            <a href="{{ "/about" | relative_url }}" style="text-decoration: none; color: inherit;">
              <div class="sidebar-item">
                <i class="codicon codicon-account icon"></i>
                <span>About</span>
              </div>
            </a>
          </div>

          <div class="sidebar-section">
            <div class="sidebar-section-title">RECENT POSTS</div>
            {% for post in site.posts limit:5 %}
            <a href="{{ post.url | relative_url }}" style="text-decoration: none; color: inherit;">
              <div class="sidebar-item">
                <i class="codicon codicon-file icon"></i>
                <span>{{ post.title | truncate: 25 }}</span>
              </div>
            </a>
            {% endfor %}
          </div>

          {% if site.categories.size > 0 %}
          <div class="sidebar-section">
            <div class="sidebar-section-title">CATEGORIES</div>
            {% for category in site.categories %}
            <div class="sidebar-item">
              <i class="codicon codicon-folder icon"></i>
              <span>{{ category[0] }} ({{ category[1].size }})</span>
            </div>
            {% endfor %}
          </div>
          {% endif %}
        </div>
      </div>

      <!-- Editor Group -->
      <div class="vscode-editor-group {% if page.layout == 'post' %}with-right-panel{% endif %}">
        <div class="vscode-editor-wrapper">
          <!-- Tab Bar -->
          <div class="vscode-tabs">
            <div class="vscode-tab active">
              <i class="codicon codicon-markdown tab-icon"></i>
              <span class="tab-label">{% if page.title %}{{ page.title }}{% else %}Home{% endif %}</span>
            </div>
          </div>

          <!-- Editor Content -->
          <div class="vscode-editor">
            {{ content }}
          </div>
        </div>

        <!-- Right Panel (Outline + Minimap) - Only on post pages -->
        {% if page.layout == 'post' %}
        <div class="vscode-right-panel">
          <!-- Outline Section -->
          <div class="right-panel-section outline">
            <div class="right-panel-header">
              <i class="codicon codicon-list-tree"></i> OUTLINE
            </div>
            <div id="outline-container">
              <!-- Populated by JS -->
            </div>
          </div>

          <!-- Minimap Section -->
          <div class="right-panel-section minimap">
            <div class="right-panel-header">
              <i class="codicon codicon-symbol-misc"></i> MINIMAP
            </div>
            <div class="minimap-content" id="minimap-content">
              <!-- Populated by JS -->
            </div>
          </div>
        </div>
        {% endif %}
      </div>
    </div>

    <!-- Terminal Panel - Only on post pages -->
    {% if page.layout == 'post' %}
    <div class="vscode-terminal-panel">
      <div class="terminal-tabs">
        <div class="terminal-tab active">
          <i class="codicon codicon-tag"></i>
          <span>TAGS</span>
        </div>
        <div class="terminal-tab">
          <i class="codicon codicon-comment"></i>
          <span>COMMENTS (Coming Soon)</span>
        </div>
      </div>
      <div class="terminal-content">
        {% if page.tags.size > 0 %}
        <div class="terminal-tags">
          {% for tag in page.tags %}
          <span class="terminal-tag">
            <i class="codicon codicon-tag"></i> {{ tag }}
          </span>
          {% endfor %}
        </div>
        {% else %}
        <p style="color: var(--text-secondary); font-size: 13px;">No tags</p>
        {% endif %}
      </div>
    </div>
    {% endif %}

    <!-- Status Bar -->
    <div class="vscode-statusbar">
      <div class="statusbar-left">
        <span><i class="codicon codicon-circle-filled" style="color: #4EC9B0;"></i> Jekyll</span>
        <span><i class="codicon codicon-markdown"></i> Markdown</span>
      </div>
      <div class="statusbar-right">
        <span>UTF-8</span>
        <span>{{ site.posts.size }} posts</span>
      </div>
    </div>
  </div>

  <!-- Outline & Minimap JS -->
  {% if page.layout == 'post' %}
  <script>
    window.updateOutline = function() {
      const container = document.getElementById('outline-container');
      if (!container || !window.postOutline) return;
      
      container.innerHTML = '';
      window.postOutline.forEach(function(item) {
        const div = document.createElement('div');
        div.className = 'outline-item level-' + item.level.charAt(1);
        div.innerHTML = '<i class="codicon codicon-symbol-' + (item.level === 'h2' ? 'method' : 'field') + '"></i>' + item.text;
        div.onclick = function() {
          document.getElementById(item.id).scrollIntoView({ behavior: 'smooth' });
        };
        container.appendChild(div);
      });
    };

    window.updateMinimap = function() {
      const content = document.getElementById('post-content');
      const minimap = document.getElementById('minimap-content');
      if (!content || !minimap) return;
      
      minimap.textContent = content.textContent.substring(0, 5000);
    };
  </script>
  {% endif %}
</body>
</html>
